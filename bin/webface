#!/usr/bin/env php
<?php

use AbmmHasan\WebFace\Router\Asset\RouteDepot;

if (php_sapi_name() !== 'cli') {
    exit;
}
require_once(realpath('./vendor/autoload.php'));
$written = RouteDepot::cache();
if ($written) {
    echo "Route cached successfully ({$written} Bytes written)!";
} else {
    echo "Caching failed";
}
exit();
